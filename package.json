{
  "name": "scoutbot",
  "version": "0.0.1",
  "description": "A handy chatbot",
  "author": "Michael DeBonis",
  "license": "Botpress Proprietary License",
  "main": "index.js",
  "dependencies": {
    "botpress": "1.x",
    "botpress-web": "1.x"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "codeclimate-test-reporter": "^0.5.0",
    "eslint": "^4.14.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.4.0",
    "husky": "^0.14.3",
    "istanbul": "^0.4.5",
    "lint-staged": "^6.0.0",
    "mocha": "^4.1.0",
    "prettier": "^1.9.2",
    "sinon": "^4.1.3"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint *.js lib --ext .js",
    "test": "npm run lint && mocha lib --recursive",
    "test-coverage": "istanbul cover _mocha lib -- --recursive",
    "start": "botpress start"
  },
  "lint-staged": {
    "*.{js,jsx}": ["prettier --write", "eslint", "git add"],
    "*.{json,css,scss}": ["prettier --write", "git add"]
  }
}
